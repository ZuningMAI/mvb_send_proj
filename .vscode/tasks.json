{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            //在当前项目目录创建build文件夹
            "label": "mkdir", //任务名称
            "type": "shell", //任务类型，定义任务是被作为进程运行还是在 shell 中作为命令运行。
            "options": {
                "cwd": "${workspaceFolder}" //已执行程序或脚本的当前工作目录，设置当前项目文件夹
            },
            "command": "if not exist bin mkdir bin", //命令 - 使用cmd命令判断目录是否存在
            "args": []
        },
        {
            "label": "qmake-debug",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/bin" //进入build目录
            },
            "command": "D:\\Qt\\5.14.2\\mingw73_64\\bin\\qmake.exe", //qmake命令，这里没用完整路径，是因为配置到环境变量了 C:/Qt/5.15.2/mingw81_64/bin/qmake.exe
            "args": [ //跟的参数是不是很熟悉，就是上面分析出来的Qt Creator执行流程
                "../${workspaceFolderBasename}.pro", //在build目录上一级哦"../${workspaceFolderBasename}.pro"
                "-spec",
                "win32-g++",
                "\"CONFIG+=debug\"",
                "\"CONFIG+=console\""
            ],
            "dependsOn": [ //这是本条命令依赖的前置条件，就是上面创建build文件夹的task，直接执行本task会自动先调用依赖的task
                "mkdir" //其实可以手动执行一次，后面不用每次都执行创建目录的操作
            ],
            "options": {
                "cwd": "${workspaceFolder}/bin",
                "env": {
                    "PATH": "D:\\Qt\\5.14.2\\mingw73_64\\bin;D:\\Qt\\Tools\\mingw730_64\\bin;${env:PATH}"
                }
            }
        },
        {
            "label": "make-debug",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/bin"
            },
            "command": "D:/Qt/Tools/mingw730_64/bin/mingw32-make.exe", //MinGW这个也配置在环境变量了，不用写完整路径了 C:/Qt/Tools/mingw810_64/bin/mingw32-make.exe
            "args": [
                "-f",
                "Makefile.Debug", //-f 选择makefile，这是qmake编译出来的
                "-j7" //这个参数都知道吧，编译用的线程数量
            ],
            "dependsOn": [
                "qmake-debug"
            ],
            "options": {
                "cwd": "${workspaceFolder}/bin",
                "env": {
                    "PATH": "D:\\Qt\\5.14.2\\mingw73_64\\bin;D:\\Qt\\Tools\\mingw730_64\\bin;${env:PATH}"
                }
            }
        },
        {
            "label": "run-debug",
            "type": "shell", //使用shell类型以便弹出外部终端
            "options": {
                "cwd": "${workspaceFolder}/bin/debug" //没在.pro配置DESTDIR,会生成到build目录下面对应目录
            },
            "command": "start", //使用start命令弹出新窗口
            "args": [
                "cmd",
                "/k",
                "set PATH=D:\\Qt\\5.14.2\\mingw73_64\\bin;D:\\Qt\\Tools\\mingw730_64\\bin;%PATH% && mvb_send_demo.exe"
            ],
            "dependsOn": [
                "make-debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        //
        {
            "label": "qmake-release",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/bin"
            },
            "command": "D:\\Qt\\5.14.2\\mingw73_64\\bin\\qmake.exe",
            "args": [ //注意release跟debug参数的差异
                "../${workspaceFolderBasename}.pro",
                "-spec",
                "win32-g++",
                "\"CONFIG+=qtquickcompiler\""
            ],
            "dependsOn": [
                // "mkdir" //不用每次都创建吧
            ],
            "options": {
                "cwd": "${workspaceFolder}/bin",
                "env": {
                    "PATH": "D:\\Qt\\5.14.2\\mingw73_64\\bin;D:\\Qt\\Tools\\mingw730_64\\bin;${env:PATH}"
                }
            }
        },
        {
            "label": "make-release",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/bin"
            },
            "command": "D:/Qt/Tools/mingw730_64/bin/mingw32-make.exe",
            "args": [
                "-f",
                "Makefile.Release", //注意release跟debug参数的差异
                "-j7"
            ],
            "dependsOn": [
                "qmake-release"
            ],
            "options": {
                "cwd": "${workspaceFolder}/bin",
                "env": {
                    "PATH": "D:\\Qt\\5.14.2\\mingw73_64\\bin;D:\\Qt\\Tools\\mingw730_64\\bin;${env:PATH}"
                }
            }
        },
        {
            "label": "run-release",
            "type": "shell", //使用shell类型以便弹出外部终端
            "options": {
                "cwd": "${workspaceFolder}/bin/release"
            },
            "command": "start", //使用start命令弹出新窗口
            "args": [
                "cmd",
                "/k",
                "set PATH=D:\\Qt\\5.14.2\\mingw73_64\\bin;D:\\Qt\\Tools\\mingw730_64\\bin;%PATH% && mvb_send_demo.exe"
            ],
            "dependsOn": [
                "make-release"
            ]
        },
        {
            "label": "clean",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/bin"
            },
            "command": "D:/Qt/Tools/mingw730_64/bin/mingw32-make.exe",
            "args": [
                "clean"
            ],
            "options": {
                "cwd": "${workspaceFolder}/bin",
                "env": {
                    "PATH": "D:\\Qt\\5.14.2\\mingw73_64\\bin;D:\\Qt\\Tools\\mingw730_64\\bin;${env:PATH}"
                }
            }
        }
    ]
}